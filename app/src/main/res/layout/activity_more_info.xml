<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreInfoActivity">

    <TextView
        android:id="@+id/message2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Post-Run Mood"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/ivpostmood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/message2"
        app:layout_constraintTop_toBottomOf="@+id/message2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivangriest"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivorange"
        app:srcCompat="@drawable/angriestcropped" />

    <ImageView
        android:id="@+id/ivorange"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivmedium"
        app:srcCompat="@drawable/smallorangecropped" />

    <ImageView
        android:id="@+id/ivmedium"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivgreenishyellow"
        app:srcCompat="@drawable/mediumfacecropped" />

    <ImageView
        android:id="@+id/ivgreenishyellow"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivhappiest"
        app:srcCompat="@drawable/smalllightgreencropped" />

    <ImageView
        android:id="@+id/ivhappiest"
        android:layout_width="27dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toTopOf="@+id/mybargraph"
        app:srcCompat="@drawable/happiestcropped" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Post Run Results"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pre-Run Mood"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/ivpremood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/message1"
        app:layout_constraintTop_toBottomOf="@+id/message1"
        tools:srcCompat="@tools:sample/avatars" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/mybargraph"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nextbutton" />

    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nextbutton"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TEXT STATEMENT ABOUT CHANGE IN MOOD" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="Go Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/time_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ivpremood"
        app:layout_constraintTop_toBottomOf="@+id/ivpremood" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/calories_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvTimeMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/mybargraph"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        tools:text="TIME" />

    <TextView
        android:id="@+id/tvDistanceMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTimeMI"
        tools:text="DISTANCE" />

    <TextView
        android:id="@+id/tvCaloriesMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/tvDistanceMI"
        tools:text="CALORIES" />


</androidx.constraintlayout.widget.ConstraintLayout>