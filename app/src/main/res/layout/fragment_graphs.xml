<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GraphsFragment">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="110dp"
        android:layout_height="21dp"
        android:text="MOOD"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mybargraph" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:text="Pre-Run"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/mystressgraph"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mystressgraph" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="40dp"
        android:text="Post-Run"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/mystressgraph"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="110dp"
        android:layout_height="21dp"
        android:text="STRESS"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mystressgraph" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/mystressgraph"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mybargraph" />

    <ImageView
        android:id="@+id/ivangriest"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivorange"
        app:srcCompat="@drawable/angriestcropped" />

    <ImageView
        android:id="@+id/ivorange"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivmedium"
        app:srcCompat="@drawable/smallorangecropped" />

    <ImageView
        android:id="@+id/ivmedium"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivgreenishyellow"
        app:srcCompat="@drawable/mediumfacecropped" />

    <ImageView
        android:id="@+id/ivgreenishyellow"
        android:layout_width="27dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintTop_toBottomOf="@+id/ivhappiest"
        app:srcCompat="@drawable/smalllightgreencropped" />

    <ImageView
        android:id="@+id/ivhappiest"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@+id/mybargraph"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mybargraph"
        app:srcCompat="@drawable/happiestcropped" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/mybargraph"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>